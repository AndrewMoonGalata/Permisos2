<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EAEAEA" /> <!-- Color de fondo del cuadro de texto -->
            <corners android:radius="8dp" /> <!-- Radio de las esquinas del cuadro -->
        </shape>
    </item>
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp"
        android:bottom="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="#CCCCCC"
                 android:width="1dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
